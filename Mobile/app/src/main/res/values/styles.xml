<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">#00000000</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:fontFamily">@font/arimo</item>
        <item name="colorPrimary">@color/blue_default</item>
        <item name="colorError">@color/error_color_material_light</item>
        <item name="android:statusBarColor">#000000</item>
    </style>
    <style name="AppTheme.ActionBar">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>
        <item name="android:fontFamily">@font/arimo</item>
        <!-- Color palette -->
        <!--        <item name="colorPrimaryDark">@color/blue_default</item>-->
        <item name="android:statusBarColor">#000000</item>
        <item name="colorPrimary">@color/blue_default</item>
        <!--        <item name="android:textColorPrimary">@color/white</item>-->
        <item name="actionModeCloseDrawable">@drawable/ic_baseline_arrow_back_24</item>
        <item name="homeAsUpIndicator">@drawable/ic_baseline_arrow_back_24</item>
        <item name="colorError">@color/error_color_material_light</item>
    </style>
    <style name="menuButton">
        <item name="android:layout_marginBottom">7dp</item>
        <item name="android:layout_marginTop">7dp</item>
        <item name="android:background">@drawable/button_background_blue</item>
        <item name="android:textColor">@color/whiteTextColor</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="AppTheme.CustomThemMenu">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:fontFamily">@font/arimo</item>
        <!-- Color palette -->
        <!--        <item name="colorPrimaryDark">@color/blue_default</item>-->
        <item name="android:statusBarColor">#000000</item>
        <item name="colorPrimary">@color/blue_default</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="colorError">@color/error_color_material_light</item>
    </style>
</resources>